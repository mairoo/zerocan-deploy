# 백엔드 호스트 nginx 로그
/opt/docker/projects/zerocan/backend/logs/host-*.log {
    daily
    rotate 30
    compress
    delaycompress
    missingok
    notifempty
    su www-data www-data
    create 644 www-data www-data
    postrotate
        /bin/systemctl reload nginx 2>/dev/null || true
    endscript
}

# 백엔드 도커 nginx 로그
/opt/docker/projects/zerocan/backend/logs/load-balancer-*.log {
    daily
    rotate 30
    compress
    delaycompress
    missingok
    notifempty
    su root root
    create 644 root root
    copytruncate
}

